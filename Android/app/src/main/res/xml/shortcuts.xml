<shortcuts xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="25">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/ic_action_sos"
        android:shortcutId="shortcut_name"
        android:shortcutShortLabel="@string/short_label"
        android:shortcutLongLabel="@string/long_label"
        >
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.lineofsafety.MainActivity"
            android:targetPackage="com.example.lineofsafety">
        </intent>
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="com.example.lineofsafety.EmergencyServices"
            android:targetPackage="com.example.lineofsafety">
        </intent>
        <categories android:name="android.shortcut.conversation" />
    </shortcut>
</shortcuts>